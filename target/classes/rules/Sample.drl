rule "Init"
	when
	then
		String [] answers = {"Book", "Infographic", "Newspaper", "Invitation"};
		Question question = new Question("Start out by choosing the kind of project that you'll need your typeface for.",answers);
		insert(question);
end
 
rule "Question"
    when
    	q: Question()
    then
    	System.out.println(q.content); 
    	q.choosed = Fontface.GuiWindow(q);
    	System.out.println(q.choosed);
    	Answer answer = new Answer(q.content, q.choosed);
    	insert(answer);
    	retract(q);
end

